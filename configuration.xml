<?xml version='1.0' standalone='yes'?>
<configuration>
	<generator>4</generator>
	<saved_count>0</saved_count>
	<database>
		<type>MySQL</type>
		<sub_type>standard</sub_type>
		<hostname>localhost</hostname>
		<username>proftpd</username>
		<password>dptforp</password>
		<database>proftpd_admin</database>
	</database>
	<proftpd>
		<generic>
			<ftp_root>/srv/ftp</ftp_root>
		</generic>
		<create_users>
			<default_homedirectory>/srv/ftp/home</default_homedirectory>
			<createuser_command>/usr/bin/sudo /var/www/html/proftpd-adm/misc/user_script/create_user.sh</createuser_command>
			<default_shell>/bin/false</default_shell>
		</create_users>
		<delete_users>
			<deleteuser_command>/usr/bin/sudo /var/www/html/proftpd-adm/misc/user_script/delete_user.sh</deleteuser_command>
		</delete_users>
	</proftpd>
	<user_interface>
		<toplist_num_names>10</toplist_num_names>
		<toplist_padlist>1</toplist_padlist>
		<userview_logitems>30</userview_logitems>
		<userview_striplogpath>1</userview_striplogpath>

		<sysinfo_only>0</sysinfo_only>
		<style>blueish_hue</style>
		<language>english</language>
		<skip_mountpoints>
			<mountpoint>/dev</mountpoint>
		</skip_mountpoints>
		<sections>
			<download>/pub</download>
			<download>/distrib</download>
			<download>/incoming</download>
			<download>/tmp</download>
			<upload>/incoming</upload>
		</sections>
	</user_interface>
	<file_paths>
		<generic>
			<who>/usr/bin/who</who>
			<df>/bin/df</df>
			<ps>/bin/ps</ps>
			<sysctl>/sbin/sysctl</sysctl>
			<ftpwho>/usr/bin/ftpwho</ftpwho>
		</generic>
		<os_specific>
			<winnt>
				<ftpadmin_utils>C:/ftpadmin_utils/</ftpadmin_utils>
			</winnt>
			<linux>
				<kernel_configuration>/boot/config</kernel_configuration>
				<proftpd>/usr/sbin/proftpd</proftpd>
			</linux>
			<bsd>
				<kernel_configuration>/usr/src/sys/i386/conf/GENERIC</kernel_configuration>
				<proftpd>/usr/local/libexec/proftpd</proftpd>
			</bsd>
		</os_specific>
	</file_paths>
	<extensions>
		<vhosts>
			<enabled>0</enabled>
		</vhosts>
		<quota>
			<enabled>0</enabled>
			<type>user</type>
			<limit_type>soft</limit_type>
			<per_session>0</per_session>
			<download_byte_limit>10485760</download_byte_limit>
			<upload_byte_limit>10485760</upload_byte_limit>
			<transferred_byte_limit>20971520</transferred_byte_limit>
			<download_file_limit>10</download_file_limit>
			<upload_file_limit>10</upload_file_limit>
			<transferred_file_limit>20</transferred_file_limit>
		</quota>
		<pdns>
			<enabled>0</enabled>
		</pdns>
	</extensions>
</configuration>
